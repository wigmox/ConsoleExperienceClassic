        <Anchors>
            <Anchor point="BOTTOM" relativeTo="UIParent" relativePoint="BOTTOM">
                <Offset>
                    <AbsDimension x="110" y="55"/>
                </Offset>
            </Anchor>
        </Anchors>
    </CheckButton>

</Ui>

