    <!-- ============================================================ -->
    <!-- RIGHT STAR: RB (center) + Face Buttons (A/X/Y/B around it)   -->
    <!-- Positioned at bottom center, right side                      -->
    <!-- ============================================================ -->
    
    <!-- 9 = RB (CENTER of right star) -->
    <CheckButton name="ConsoleActionButton9" inherits="ConsoleActionButtonTemplate" id="9" parent="UIParent">
        <Anchors>
            <Anchor point="BOTTOM" relativeTo="UIParent" relativePoint="BOTTOM">
                <Offset>
                    <AbsDimension x="70" y="55"/>
                </Offset>
            </Anchor>
        </Anchors>
    </CheckButton>
    <!-- 3 = Y (top of right star) -->
    <CheckButton name="ConsoleActionButton3" inherits="ConsoleActionButtonTemplate" id="3" parent="UIParent">
        <Anchors>
            <Anchor point="BOTTOM" relativeTo="UIParent" relativePoint="BOTTOM">
                <Offset>
                    <AbsDimension x="70" y="95"/>
                </Offset>
            </Anchor>
        </Anchors>
    </CheckButton>
    <!-- 1 = A (bottom of right star) -->
    <CheckButton name="ConsoleActionButton1" inherits="ConsoleActionButtonTemplate" id="1" parent="UIParent">
        <Anchors>
            <Anchor point="BOTTOM" relativeTo="UIParent" relativePoint="BOTTOM">
                <Offset>
                    <AbsDimension x="70" y="15"/>
                </Offset>
            </Anchor>
        </Anchors>
    </CheckButton>
    <!-- 2 = X (left of right star) -->
    <CheckButton name="ConsoleActionButton2" inherits="ConsoleActionButtonTemplate" id="2" parent="UIParent">
        <Anchors>
            <Anchor point="BOTTOM" relativeTo="UIParent" relativePoint="BOTTOM">
                <Offset>
